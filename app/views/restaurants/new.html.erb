<h1>Create Restaurant Listing</h1>

<%= form_for @restaurant do |f| %>
	<p>
		<%= f.label :name %><br>
		<%= f.text_field :name %><br>
		<%= f.label :description %><br>
		<%= f.text_area :description, :cols => 30, :rows => 10 %><br>
	</p>
	<p>
		<%= f.submit "Create" %>
	</p>
<% end %>

<%= link_to 'Back', :back %>